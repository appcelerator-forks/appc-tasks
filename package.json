{
  "name": "appc-tasks",
  "version": "1.0.0",
  "description": "Base implementations for any kind of task in NodeJS",
  "author": "Axway Appcelerator <info@appcelerator.com> (https://appcelerator.com)",
  "contributors": [
    "Jan Vennemann <jvennemann@axway.com>"
  ],
  "repository": "appcelerator/appc-tasks",
  "license": "Apache-2.0",
  "engines": {
    "node": ">= 4.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "babel lib --out-dir dist",
    "docs": "docma -c docma.config.json",
    "lint": "eslint lib test",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "coveralls": "cross-env NODE_ENVE=test nyc report --reporter=text-lcov | coveralls",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "keywords": [
    "task",
    "incremental",
    "build",
    "project"
  ],
  "dependencies": {
    "file-state-monitor": "^1.0.0",
    "fs-extra": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.0.1",
    "docma": "^1.5.1",
    "eslint": "^4.3.0",
    "eslint-plugin-mocha": "^4.11.0",
    "jsdoc-babel": "^0.3.0",
    "mocha": "^3.4.2",
    "mock-fs": "^4.4.1",
    "nyc": "^11.0.3",
    "sinon": "^2.4.1",
    "std-mocks": "^1.0.1"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
